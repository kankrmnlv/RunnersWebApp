@model IEnumerable<Club>

<div class="row mt-4">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0" style="border-radius: 12px; overflow: hidden;">
                <!-- Club Image -->
                <img src="@item.Image" class="card-img-top" alt="@item.Title" style="height: 225px; object-fit: cover;">

                <!-- Card Body -->
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">@item.Title</h5>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <a asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary fw-bold">Read More</a>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                        {
                            <a asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary fw-bold">Edit</a>
                            <a asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger fw-bold">Delete</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
