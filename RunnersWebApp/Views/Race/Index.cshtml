@model IEnumerable<Race>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row mt-4">
    @foreach (var item in Model)
    {

        <div class="col-md-4">
            <div class="card shadow">
                <img src="@item.Image" width="100%" height="225" class="card-img-top" alt="Feature 1">
                <div class="card-body text-center">
                    <h5 class="card-title">Feature One</h5>
                    <p class="card-text">@item.Title</p>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Read More</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                        {
                        <a asp-controller="Race" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                        <a asp-controller="Race" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>