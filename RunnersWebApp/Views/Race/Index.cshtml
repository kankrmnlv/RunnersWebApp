@model IEnumerable<Race>

@{
    ViewData["Title"] = "Races";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Available Races</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@item.Image" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-muted">@item.Description</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex justify-content-center gap-2">
                        <a asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Read More</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                        {
                            <a asp-controller="Race" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                            <a asp-controller="Race" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>