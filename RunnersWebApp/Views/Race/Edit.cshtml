@using RunnersWebApp.Data.Enum
@using RunnersWebApp.ViewModels
@model EditRaceViewModel

@{
    ViewBag.Title = "Edit Race";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Race</h2>

    <form method="post" asp-action="Edit" enctype="multipart/form-data" class="card p-4 shadow-sm">
        <input type="hidden" value="AddressId" id="AddressId" />

        <!-- Title -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-bold"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter race title" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold"></label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter race description"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <!-- Club Category -->
        <div class="mb-3">
            <label asp-for="RaceCategory" class="form-label fw-bold"></label>
            <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()" class="form-select">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="RaceCategory" class="text-danger small"></span>
        </div>

        <!-- Address Section -->
        <div class="mb-3">
            <h5 class="fw-bold mb-3">Address Details</h5>

            <!-- City -->
            <div class="mb-3">
                <label asp-for="Address.City" class="form-label fw-bold"></label>
                <input asp-for="Address.City" class="form-control" placeholder="Enter city" />
                <span asp-validation-for="Address.City" class="text-danger small"></span>
            </div>

            <!-- Country -->
            <div class="mb-3">
                <label asp-for="Address.Country" class="form-label fw-bold"></label>
                <input asp-for="Address.Country" class="form-control" placeholder="Enter country" />
                <span asp-validation-for="Address.Country" class="text-danger small"></span>
            </div>

            <!-- Street -->
            <div class="mb-3">
                <label asp-for="Address.Street" class="form-label fw-bold"></label>
                <input asp-for="Address.Street" class="form-control" placeholder="Enter street" />
                <span asp-validation-for="Address.Street" class="text-danger small"></span>
            </div>
        </div>

        <!-- Image Upload -->
        <div class="mb-4">
            <label asp-for="Image" class="form-label fw-bold"></label>
            <input asp-for="Image" type="file" class="form-control" />
            <span asp-validation-for="Image" class="text-danger small"></span>
        </div>

        <!-- Submit Button -->
        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
        </div>
    </form>
</div>