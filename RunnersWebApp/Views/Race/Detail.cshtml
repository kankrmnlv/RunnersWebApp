@using RunnersWebApp.ViewModels
@model RaceDetailViewModel

<div class="container mt-5">
    <!-- Title -->
    <h1 class="text-center mb-4 fw-bold display-4">@Model.Race.Title</h1>

    <!-- Main Image -->
    <div class="text-center mb-3">
        <img src="@Model.Race.Image" class="img-fluid rounded-3 shadow" alt="@Model.Race.Title">
    </div>

    <!-- Description and Details -->
    <div class="row g-4">
        <!-- Description -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="fw-bold mb-3">About the Race</h2>
                    <p class="lead text-muted">@Model.Race.Description</p>
                </div>
            </div>
        </div>

        <!-- Details -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h2 class="fw-bold mb-3">Race Details</h2>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="fw-bold">City</span>
                            <span>@Model.Race.Address.City</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="fw-bold">Country</span>
                            <span>@Model.Race.Address.Country</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="fw-bold">Street</span>
                            <span>@Model.Race.Address.Street</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="fw-bold">Category</span>
                            <span>@Model.Race.RaceCategory</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Races -->
    <div class="mt-5">
        <h2 class="text-center fw-bold mb-4 display-5">Related Races</h2>
        @if (Model.OtherRaces != null && Model.OtherRaces.Any())
        {
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var race in Model.OtherRaces)
                {
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm">
                            <img src="@race.Image" class="card-img-top" alt="@race.Title" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title fw-bold">@race.Title</h5>
                                <p class="card-text text-muted">@race.Description</p>
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <a asp-controller="Race" asp-action="Detail" asp-route-id="@race.Id" class="btn btn-primary w-100">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted lead">No related races available.</p>
        }
    </div>
</div>