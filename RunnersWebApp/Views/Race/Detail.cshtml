@model Race

<div class="container mt-5">
    <!-- Title -->
    <h1 class="text-center mb-4">@Model.Title</h1>

    <!-- Main Image -->
    <div class="text-center">
        <img src="@Model.Image" class="img-fluid rounded shadow-lg" alt="Project Image">
    </div>

    <!-- Project Info (Side-by-Side Layout) -->
    <div class="row mt-5">
        <!-- Project Description -->
        <div class="col-md-6">
            <h2>Description</h2>
            <p>@Model.Description</p>
        </div>

        <!-- Project Details -->
        <div class="col-md-6">
            <h2>Details</h2>
            <table class="table table-bordered">
                <tr>
                    <th>City</th>
                    <td>@Model.Address.City</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>@Model.Address.Country</td>
                </tr>
                <tr>
                    <th>Street</th>
                    <td>@Model.Address.Street</td>
                </tr>
                <tr>
                    <th>Race Category</th>
                    <td>@Model.RaceCategory</td>
                </tr>
            </table>
        </div>
    </div>

    <!-- Related Projects (Horizontal Cards) -->
    <div class="mt-5">
        <h2 class="text-center">Similar Projects</h2>
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="card mb-3 shadow-lg">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="https://via.placeholder.com/300" class="img-fluid rounded-start" alt="Related Project 1">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Project Alpha</h5>
                                <p class="card-text">An innovative project focusing on cutting-edge technology.</p>
                                <a href="#" class="btn btn-primary">View More</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3 shadow-lg">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="https://via.placeholder.com/300" class="img-fluid rounded-start" alt="Related Project 2">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Project Beta</h5>
                                <p class="card-text">A web solution designed for efficiency and scalability.</p>
                                <a href="#" class="btn btn-primary">View More</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3 shadow-lg">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="https://via.placeholder.com/300" class="img-fluid rounded-start" alt="Related Project 3">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Project Gamma</h5>
                                <p class="card-text">A unique concept bringing innovation to digital platforms.</p>
                                <a href="#" class="btn btn-primary">View More</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
