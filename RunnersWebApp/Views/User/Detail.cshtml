@using RunnersWebApp.ViewModels
@model RunnersDetailViewModel

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <!-- Card Header -->
                <div class="card-header text-center bg-primary text-white py-4">
                    <h2 class="fw-bold mb-0">@Model.UserName's Profile</h2>
                </div>

                <!-- Card Body -->
                <div class="card-body text-center p-4">
                    <!-- Profile Picture -->
                    <img src="@Model.Image" class="rounded-circle mb-4 shadow-sm" width="150" height="150" alt="Profile Picture">

                    <!-- User Name -->
                    <h4 class="fw-bold mb-2">@Model.UserName</h4>
                    <p class="text-muted mb-4">
                        <i class="fas fa-map-marker-alt me-1"></i>@Model.City, @Model.Country
                    </p>

                    <!-- Pace and Mileage -->
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <h5 class="fw-semibold mb-2">Pace</h5>
                                <p class="text-muted mb-0">@Model.Pace mph</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <h5 class="fw-semibold mb-2">Mileage</h5>
                                <p class="text-muted mb-0">@Model.Mileage miles</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card Footer -->
                <div class="card-footer text-center bg-light py-3">
                    <a asp-controller="User" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Users
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>