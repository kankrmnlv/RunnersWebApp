@using RunnersWebApp.ViewModels
@model List<RunnersViewModel>

<section class="py-4">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var user in Model)
            {
                <div class="col">
                    <div class="card shadow-sm border-0">
                        <div class="card-body d-flex align-items-center">
                            <img src="@user.Image" class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;" alt="User Avatar">
                            <div class="flex-grow-1">
                                <h6 class="mb-1">@user.UserName</h6>
                                <p class="small text-muted mb-0">
                                    @* <i class="icon-location"></i> @user.Location *@
                                </p>
                                <p class="small text-muted">🏃 @user.Mileage mile at @user.Pace mph</p>
                            </div>
                            <a class="btn btn-outline-primary btn-sm" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">
                                View Profile
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
